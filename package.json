{
  "name": "mcp-refactor-typescript",
  "version": "1.0.0",
  "description": "MCP server for TypeScript/JavaScript code refactoring using TypeScript Language Server",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-refactor-typescript": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Stefan-Nitu/mcp-refactor-typescript.git"
  },
  "author": "Stefan Nitu",
  "license": "MIT",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "typescript",
    "javascript",
    "refactoring",
    "lsp",
    "language-server"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "pino": "^10.0.0",
    "tsr": "^1.3.4",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.6",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.18.0",
    "husky": "^9.1.7",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
